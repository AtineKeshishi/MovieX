<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".singleMovie.SingleMovie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errorSingle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/fondamento"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="@string/connectionProblem"
            android:visibility="gone"/>

        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout">


                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/movieTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:text="movie"
                            android:textStyle="bold"
                            android:textColor="@color/grayCloud"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                        <ToggleButton
                            android:id="@+id/buttonFavorite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_favorite"
                            android:checked="false"
                            android:layout_marginEnd="5dp"
                            android:text=""
                            android:textOff=""
                            android:textOn=""/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="Release Date: "
                            android:textSize="12sp"
                            android:textColor="@color/grayCloud"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/releaseDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="2019"
                            android:textColor="@color/platinum"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="Rating: "
                            android:textSize="12sp"
                            android:textColor="@color/grayCloud"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/movieRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="8"
                            android:textColor="@color/platinum"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="Runtime: "
                            android:textSize="12sp"
                            android:textColor="@color/grayCloud"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/movieRuntime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="2.3 hr"
                            android:textColor="@color/platinum"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="Budget: "
                            android:textSize="12sp"
                            android:textColor="@color/grayCloud"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/movieBudget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="130,000"
                            android:textColor="@color/platinum"
                            android:textSize="12sp"/>

                    </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/fondamento"
                            android:text="Overview: "
                            android:textSize="12sp"
                            android:textColor="@color/grayCloud"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/movieOverview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fondamento"
                            android:layout_marginTop="2dp"
                            android:text="overview ........."
                            android:textColor="@color/platinum"
                            android:textSize="12sp"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>